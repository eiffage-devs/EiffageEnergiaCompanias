<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DocumentacionGeneralV2">


    <TextView
        android:id="@+id/ultimaActualizacion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_orange_light"
        android:gravity="left"
        android:paddingBottom="5dp"
        android:paddingLeft="20dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp"
        android:text="Última actualización: NUNCA"
        android:textColor="#fff"
        android:textSize="16sp" />

    <ListView
        android:id="@+id/listaDocsGeneral"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ultimaActualizacion"
        android:layout_marginBottom="50dp"
        android:background="@android:color/white"
        android:divider="#343a40"
        android:dividerHeight="5dp" />

    <Button
        android:id="@+id/btnActualizarDocs"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="-50dp"
        android:background="@color/AzulBootstrap"
        android:onClick="actualizarDocumentos"
        android:padding="5dp"
        android:text="Actualización rápida"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnActualizarDocsCompleta"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentStart="false"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:background="@color/RojoBootstrap"
        android:onClick="actualizacionCompletaDocumentos"
        android:padding="5dp"
        android:text="Actualización completa"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:visibility="gone" />

</RelativeLayout>